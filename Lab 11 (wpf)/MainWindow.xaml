<Window x:Class="Lab_11__wpf_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_11__wpf_"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
   <Grid>
        <UniformGrid>
            <Path Fill="Red">
                <Path.Data>
                    <GeometryGroup>
                        <EllipseGeometry Center="400,400" RadiusX="200" RadiusY="200"></EllipseGeometry>
                        <EllipseGeometry Center="400,400" RadiusX="160" RadiusY="160"></EllipseGeometry>
                        <RectangleGeometry Rect="240,380,320,40">
                            <RectangleGeometry.Transform>
                                <RotateTransform Angle="-45" CenterX="400" CenterY="400"></RotateTransform>
                            </RectangleGeometry.Transform>
                        </RectangleGeometry>
                    </GeometryGroup>
                </Path.Data>
            </Path>
        </UniformGrid>
    </Grid>
</Window>
